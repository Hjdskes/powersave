# bus
for i in /sys/bus/*/devices/*/power/control; do echo auto > $i; done
# cpu
for i in /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor; do echo powersave > $i; done
# aspm
echo powersave > /sys/module/pcie_aspm/parameters/policy
